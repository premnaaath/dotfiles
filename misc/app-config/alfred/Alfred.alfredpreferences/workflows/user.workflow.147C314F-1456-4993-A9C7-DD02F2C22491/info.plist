				<string>function envVar(varName) {
  return $.NSProcessInfo
    .processInfo
    .environment
    .objectForKey(varName)?.js || "";
}

function dirContents(path) {
  try {
    return $.NSFileManager.defaultManager.contentsOfDirectoryAtURLIncludingPropertiesForKeysOptionsError(
      $.NSURL.fileURLWithPath(path),
      undefined,
      $.NSDirectoryEnumerationSkipsHiddenFiles, undefined
    ).js.map(p =&gt; p.path.js);
  } catch {
    return [];
  }
}

// Get User Input (query passed as an argument)
const query = envVar("query").toLowerCase();

// Fetch all sound files
const soundDir = "/Users/premnaath/dotfiles/misc/app-config/alfred/sounds";
const allSounds = dirContents(soundDir).sort();

// Filter results based on query
const filteredSounds = allSounds.filter(file =&gt; 
  $(file).stringByDeletingPathExtension.lastPathComponent.js.toLowerCase().includes(query)
);

// Map to Alfred items
const sfItems = filteredSounds.map(file =&gt; {
  return {
    uid: file,
    title: $(file).stringByDeletingPathExtension.lastPathComponent.js,
    subtitle: file,
    arg: file,
    icon: { path: "icon.png" }
  };
});

// Output JSON for Alfred
JSON.stringify({
  items: sfItems
});
